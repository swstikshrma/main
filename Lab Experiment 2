#include<stdio.h>
#include<stdlib.h>
#include<limits.h>  
#define MAX 100     //stack size 100
int stack[MAX];        // global variable
int top=-1;             //top is -1 when it is empty

int isEmpty()   //no parameters required as array declared globally
{
    return(top == -1) ? 1 : 0;
}

int isFull()
{
    return(top == MAX-1) ? 1 : 0;
}

        void push()
        {
            if(isFull())
            {
                printf("Stack Overflow!!!\n");      //it mean stack is full
            }
            else
            {
                int value;
                printf("Enter Value : ");
                scanf("%d",&value);
                top++;              //top = -1   +1    => value inserted on index 0   
                stack[top] = value;     //and top refering to 0th index
                printf("Element added !!!\n");
            }
        }
        int pop()
        {
            if(isEmpty())
            {
                printf("Stack underflow!!!\n");
                //return NULL;
                return INT_MIN;
            }
        else
        {
            int val = stack[top];
            top--;
            return val;
        }
    }
        int peek()
        {
            if(isEmpty())
            {
                printf("Stack is Empty!!!\n");
                return INT_MIN;
            }
            else{
                return stack[top];
            }
    }
        void show()
        {                    //not actually exist in this way
            if(isEmpty())
            {                // method is of two stack taking
                printf("Stack is Empty!!!\n");  
            }
            else
            {
                int i;
                for(int i=top;i>=0;i--)
                {
                    printf("%d\n", stack[i]);
                }
            }
        }
int main()
{
    while(1)
{
    printf("1. Push\n");
    printf("2. Pop\n");
    printf("3. Peek\n");
    printf("4. Show\n");
    printf("5. Exit\n");
    int choice,res,ele;
    printf("Enter Choice : ");
    scanf("%d",&choice);
    switch(choice)
    {
        case 1:
            push();
            break;
        case 2:
            res = pop();
            if(res != INT_MIN)
                printf("%d is pop from the stack\n",res);
            break;
        case 3:
            ele = peek();
            if(ele != INT_MIN)
                printf("Top element is %d\n", ele);
            break;
        case 4:
            show();
            break;
        case 5:
            exit(0);
        default:
            printf("Invalid Choice !!!!\n");
    }
    printf("\n");
    system("pause");
}
    return 0;
}
